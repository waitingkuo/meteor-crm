template(name="header")
  header.header.fixed-top.clearfix
    // Logo Start
    .brand
      a.logo(href="{{pathFor 'index'}}")
        //img(src="images/logo.png")
        span(style="color: white; line-height: 38px; padding-left: 20px;") Meteor CRM

      .sidebar-toggle-box
        .fa.fa-bars

